{
    "manifest_version": 2,
    "name": "Memori",
    "version": "0.1",
    "description": "Your External Memory",
    "icons": {
        "48": "icons/memori-48.png",
        "96": "icons/memori-96.png"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "icons/memori-32.png",
        "default_title": "Remember with Memori"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "42.0"
        }
    },
    "applications": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "53.0"
        }
    }
}